---
import '../styles/global.css';

interface Props {
  lang?: string;
}

const { lang = 'fr' } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <slot name="head" />
  </head>
  <body>
    <slot />
  </body>
</html>
